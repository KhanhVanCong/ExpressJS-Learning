extends ../layouts/common

block content
    h1 List User
    a(href="/users/create") Create User
    form(action="/users/search", method="GET", class="d-flex")
        input(type="text", name="q", value= keyword, class="form-control")
        button(class="btn btn-primary ml-2") Search
    ul
        each user in users
            li
                span= user.name
                span &nbsp
                a(href='/users/' + user.id) View

